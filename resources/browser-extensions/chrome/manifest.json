{
  "manifest_version": 3,
  "name": "OneReach.ai Tab Share",
  "version": "1.0.0",
  "description": "Share browser tabs, text, and images with OneReach.ai Spaces",
  "permissions": ["tabs", "activeTab", "scripting", "storage", "contextMenus"],
  "host_permissions": ["http://127.0.0.1:47291/*", "http://localhost:47291/*", "<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "OneReach.ai Tab Share"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "commands": {
    "share-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Share current tab with OneReach.ai"
    }
  }
}
