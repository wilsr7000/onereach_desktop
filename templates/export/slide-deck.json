{
  "id": "slide-deck",
  "name": "Slide Deck",
  "description": "Create presentation-ready slide decks",
  "icon": "ðŸŽ¯",
  "category": "presentation",
  "prompt": "Create a presentation-style HTML document with distinct slides. Each major section should be a full-screen slide with large, readable text. Include slide numbers and navigation. Use a clean, professional design suitable for presentations.",
  "systemPrompt": "You are a presentation design expert. Transform the content into a compelling slide deck with clear visual hierarchy, impactful headings, and concise bullet points. Each slide should focus on one key concept.",
  "example": {
    "title": "Presentation Title",
    "slides": [
      {
        "title": "Introduction",
        "content": "Setting the stage",
        "notes": "Speaker notes here"
      },
      {
        "title": "Key Points",
        "bullets": [
          "First important point",
          "Second important point",
          "Third important point"
        ]
      },
      {
        "title": "Conclusion",
        "content": "Call to action"
      }
    ]
  },
  "styling": {
    "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
    "headingFont": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
    "primaryColor": "#2c3e50",
    "secondaryColor": "#7f8c8d",
    "accentColor": "#3498db",
    "backgroundColor": "#ffffff",
    "slideBackground": "#f8f9fa",
    "lineHeight": "1.6",
    "maxWidth": "100%"
  },
  "htmlTemplate": "<!DOCTYPE html>\n<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>{{title}} - Slide Deck</title>\n    <style>\n        * {\n            margin: 0;\n            padding: 0;\n            box-sizing: border-box;\n        }\n        \n        body {\n            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;\n            line-height: 1.6;\n            color: #2c3e50;\n            background-color: #f8f9fa;\n            overflow: hidden;\n        }\n        \n        .slide-container {\n            height: 100vh;\n            overflow-y: auto;\n            scroll-snap-type: y mandatory;\n            -webkit-overflow-scrolling: touch;\n        }\n        \n        .slide {\n            min-height: 100vh;\n            display: flex;\n            flex-direction: column;\n            justify-content: center;\n            align-items: center;\n            padding: 60px;\n            scroll-snap-align: start;\n            position: relative;\n        }\n        \n        .slide:nth-child(even) {\n            background-color: #ffffff;\n        }\n        \n        .slide-number {\n            position: absolute;\n            bottom: 30px;\n            right: 30px;\n            font-size: 14px;\n            color: #7f8c8d;\n        }\n        \n        .slide-content {\n            max-width: 900px;\n            width: 100%;\n            text-align: center;\n        }\n        \n        h1 {\n            font-size: 4em;\n            font-weight: 700;\n            margin-bottom: 0.5em;\n            line-height: 1.1;\n        }\n        \n        h2 {\n            font-size: 3em;\n            font-weight: 600;\n            margin-bottom: 0.8em;\n            line-height: 1.2;\n        }\n        \n        h3 {\n            font-size: 2em;\n            font-weight: 500;\n            margin-bottom: 0.8em;\n            color: #34495e;\n        }\n        \n        p {\n            font-size: 1.4em;\n            margin-bottom: 1em;\n            max-width: 800px;\n            margin-left: auto;\n            margin-right: auto;\n        }\n        \n        ul {\n            list-style: none;\n            font-size: 1.3em;\n            text-align: left;\n            max-width: 700px;\n            margin: 0 auto;\n        }\n        \n        li {\n            margin: 20px 0;\n            padding-left: 40px;\n            position: relative;\n        }\n        \n        li:before {\n            content: 'â€¢';\n            position: absolute;\n            left: 0;\n            font-size: 1.5em;\n            color: #3498db;\n        }\n        \n        .title-slide {\n            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);\n            color: white;\n        }\n        \n        .title-slide h1 {\n            font-size: 5em;\n            margin-bottom: 0.3em;\n        }\n        \n        .title-slide p {\n            font-size: 1.8em;\n            opacity: 0.9;\n        }\n        \n        .navigation {\n            position: fixed;\n            bottom: 30px;\n            left: 50%;\n            transform: translateX(-50%);\n            display: flex;\n            gap: 10px;\n            z-index: 100;\n        }\n        \n        .nav-dot {\n            width: 12px;\n            height: 12px;\n            border-radius: 50%;\n            background-color: #bdc3c7;\n            cursor: pointer;\n            transition: all 0.3s;\n        }\n        \n        .nav-dot.active {\n            background-color: #3498db;\n            transform: scale(1.2);\n        }\n        \n        .code-block {\n            background-color: #2c3e50;\n            color: #ecf0f1;\n            padding: 30px;\n            border-radius: 8px;\n            font-family: 'Consolas', 'Monaco', 'Courier New', monospace;\n            font-size: 1.1em;\n            text-align: left;\n            margin: 20px auto;\n            max-width: 800px;\n            overflow-x: auto;\n        }\n        \n        .image-slide img {\n            max-width: 100%;\n            max-height: 70vh;\n            border-radius: 8px;\n            box-shadow: 0 10px 30px rgba(0,0,0,0.2);\n        }\n        \n        @media (max-width: 768px) {\n            .slide {\n                padding: 40px 20px;\n            }\n            \n            h1 {\n                font-size: 2.5em;\n            }\n            \n            h2 {\n                font-size: 2em;\n            }\n            \n            p, li {\n                font-size: 1.1em;\n            }\n        }\n        \n        @media print {\n            .slide-container {\n                overflow: visible;\n            }\n            \n            .slide {\n                page-break-after: always;\n                min-height: auto;\n                height: 100vh;\n            }\n            \n            .navigation {\n                display: none;\n            }\n        }\n    </style>\n</head>\n<body>\n    <div class=\"slide-container\">\n        {{slides}}\n    </div>\n    <div class=\"navigation\">\n        {{navigation}}\n    </div>\n    <script>\n        // Slide navigation\n        const slides = document.querySelectorAll('.slide');\n        const dots = document.querySelectorAll('.nav-dot');\n        const container = document.querySelector('.slide-container');\n        \n        function updateActiveDot() {\n            const scrollPosition = container.scrollTop;\n            const slideHeight = window.innerHeight;\n            const currentSlide = Math.round(scrollPosition / slideHeight);\n            \n            dots.forEach((dot, index) => {\n                dot.classList.toggle('active', index === currentSlide);\n            });\n        }\n        \n        container.addEventListener('scroll', updateActiveDot);\n        \n        dots.forEach((dot, index) => {\n            dot.addEventListener('click', () => {\n                slides[index].scrollIntoView({ behavior: 'smooth' });\n            });\n        });\n    </script>\n</body>\n</html>"
} 