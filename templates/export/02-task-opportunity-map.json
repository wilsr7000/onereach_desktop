ght: 600;\n            color: #1a1a1a;\n            flex: 1;\n        }\n        \n        .task-badges {\n            display: flex;\n            gap: 8px;\n        }\n        \n        .badge {\n            padding: 4px 10px;\n            border-radius: 12px;\n            font-size: 0.75em;\n            font-weight: 600;\n        }\n        \n        .badge-quickwin {\n            background: #d1fae5;\n            color: #065f46;\n        }\n        \n        .badge-transformative {\n            background: #ede9fe;\n            color: #5b21b6;\n        }\n        \n        .task-details {\n            display: grid;\n            gap: 12px;\n        }\n        \n        .detail-row {\n            display: flex;\n            align-items: start;\n            gap: 10px;\n        }\n        \n        .detail-icon {\n            width: 20px;\n            height: 20px;\n            flex-shrink: 0;\n            display: flex;\n            align-items: center;\n            justify-content: center;\n            color: #666;\n        }\n        \n        .detail-content {\n            flex: 1;\n        }\n        \n        .detail-label {\n            font-size: 0.85em;\n            color: #666;\n            margin-bottom: 2px;\n        }\n        \n        .detail-value {\n            font-size: 0.95em;\n            color: #1a1a1a;\n        }\n        \n        .readiness-meter {\n            margin-top: 15px;\n            padding-top: 15px;\n            border-top: 1px solid #e0e0e0;\n        }\n        \n        .readiness-header {\n            display: flex;\n            justify-content: space-between;\n            align-items: center;\n            margin-bottom: 8px;\n        }\n        \n        .readiness-label {\n            font-size: 0.9em;\n            font-weight: 600;\n            color: #333;\n        }\n        \n        .readiness-value {\n            font-size: 0.85em;\n            font-weight: 600;\n            color: #00d4ff;\n        }\n        \n       